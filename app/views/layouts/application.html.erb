<!DOCTYPE html>
<html>
  <head>
    <title>CDiscussion</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <header>
    <% if customer_signed_in? %>
      <%= link_to "マイページ", customer_customer_path(current_customer) %>
      <%= link_to "ジャンル一覧", customer_genres_path %>
      <%= link_to "ユーザー一覧", customer_customers_path %>
      <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
    <% end %>
    </header>
    <%= yield %>
    <footer class="footer">
      <div class="container">
      </div>
    </footer>
  </body>
</html>
