<!DOCTYPE html>
<html>
  <head>
    <title>CDiscussion</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body class="body">
    <header>

    <header class="shadow-sm header">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand p-3 icon" href="/"><%= link_to image_tag('地球アイコン15.png'), customer_about_path %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if customer_signed_in? %>
        <li class="nav-item">
          <%= link_to "マイページ", customer_customer_path(current_customer), class: 'nav-link text-dark fas fa-house-user' %>
        </li>
        <li class="nav-item">
          <%= link_to "通知", customer_notifications_path(current_customer), class: 'nav-link text-dark fas fa-bell' %>
        </li>
        <li class="nav-item">
          <%= link_to 'ジャンル', customer_genres_path, class: 'nav-link text-dark fab fa-teamspeak' %>
        </li>
        <li class="nav-item">
          <%= link_to 'ユーザ一覧', customer_customers_path, class: 'nav-link text-dark fas fa-users' %>
        </li>
        <li class="nav-item">
          <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: 'nav-link text-dark fas fa-sign-out-alt' %>
        </li>

        <% elsif admin_signed_in? %>
        <li class="nav-item">
          <%= link_to "通報一覧", admin_notifications_path, class: 'nav-link text-dark fas fa-bell' %>
        </li>
        <li class="nav-item">
          <%= link_to 'ジャンル一覧', admin_genres_path, class: 'nav-link text-dark fa-teamspeak' %>
        </li>
        <li class="nav-item">
          <%= link_to '会員一覧', customer_customers_path, class: 'nav-link text-dark fas fa-users' %>
        </li>
        <li class="nav-item">
          <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link text-dark fas fa-sign-out-alt' %>
        </li>


        <% else %>
        <li class="nav-item">
          <%= link_to "About", customer_about_path, class: 'nav-link text-dark far fa-address-card' %>
        </li>
        <li class="nav-item">
          <%= link_to "ジャンル一覧", customer_genres_path, class: 'nav-link text-dark fab fa-teamspeak' %>
        </li>
        <li class="nav-item">
          <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-dark fas fa-plus-circle' %>
        </li>
        <li class="nav-item">
          <%= link_to "ログイン", customer_session_path, class: 'nav-link text-dark fas fa-sign-in-alt' %>
        </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>

    </header>
    <%= link_to "", 'javascript:history.back()', class: "fas fa-undo" %>
    <%= yield %>
    <footer class="footer">
      <div class="container">
      </div>
    </footer>
  </body>
</html>
