<div class="container">
 <div class="row">
  <h1>人気カテゴリー</h1>
  <div class="ml-5">
   <div id="carouselExampleIndicators" class="card-deck card-colums lg-12 carousel slide mt-5" style="width:40rem;" data-ride="carousel">
     <div class="carousel-inner" role="listbox">
    <% @rank.each_with_index do |category, i| %>
      <div class="carousel-item <%= i==0? 'active' : ''%>" data-interval="2500">
       <div class="card text-white shadow-lg p-3 mb-5 bg-white rounded">
        <div><%= attachment_image_tag category, :image, size: "400x300", class: "card-img-top" %></div>
        <div class="card-body">
         <%= link_to category.name, customer_genre_category_posts_path(category.genre_id,category), class: "card-title btn btn-info" %>
        </div>
       </div>
      </div>
    <% end %>
     </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
   </div>
  </div>
 </div>
</div>


