<% if @customer.id == current_customer.id %>
 <h1>マイページ</h1>
<% else %>
 <h1><%= @customer.nickname %></h1>
<% end %>
 <%= attachment_image_tag @customer, :image, fallback: "no_image.jpg", size: "50x50", class:"rounded-circle"%>
 <%= @customer.nickname %>
 <%= @customer.body %>
 <%= link_to "#{@customer.followings.count}フォロー", customer_customer_followings_path(@customer) %>
 <%= link_to "#{@customer.followers.count}フォロワー", customer_customer_followers_path(@customer) %>


<% if @customer.id == current_customer.id %>
 <%= link_to "プロフィールを編集",edit_customer_customer_path(@customer) %>
 <%= link_to "退会する", customer_customer_withdrawal_path(current_customer),method: :patch, "data-confirm" => "本当に退会しますか？", class: "btn btn-outline-danger" %>
 <!--data-confirmで退会ボタンクリック時にアラート発生-->
<% else %>
 <% if current_customer. following?(@customer) %>
  <%= link_to "フォローを外す", customer_customer_relationships_path(@customer), method: :delete, class: "btn btn-primary" %>
 <% else %>
  <%= link_to "フォローする", customer_customer_relationships_path(@customer), method: :post, class: "btn btn-success"%>
 <% end %>

<% end %>
