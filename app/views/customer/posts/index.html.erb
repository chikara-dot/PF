<h1 class="text-center"><%= @category.name %></h1>
<div class="container">
 <div class="row">
   <div class="col-lg-12 text-right">
   <%= link_to "", new_customer_genre_category_post_path, class: "fas fa-plus fa-5x"%>
   </div>
 </div>

 <div class="row">
  <div class="col-lg-12">
   <table>
    <tbody>
       <% @posts.each do |post| %>
         <tr><td><%= post.created_at.strftime('%Y/%m/%d')%></td></tr>
         <tr><td><%= post.customer.nickname %></td></tr>

       <tr>
        <td><%= attachment_image_tag post, :image, size: "300x250", fallback: "no_image.jpg" %></td>
        <td class="pl-2"><%= post.title %></td>
       </tr>
       <tr>
        <td></td>
        <td class="text-right"><% if post.favorited_by?(current_customer)%>
          <%= link_to customer_genre_category_post_favorites_path(@category.genre_id,@category,post), method: :delete do %>
           ♥<%= post.favorites.count %>いいね
          <% end %></td>
        <td class="text-right"><% else %>
          <%= link_to customer_genre_category_post_favorites_path(@category.genre_id,@category,post), method: :post do %>
           ♡<%= post.favorites.count %>いいね</td>
          <% end %>
        <% end %>
        <td><%= link_to "", customer_genre_category_post_path(@category.genre_id,@category,post),class: "far fa-comment-dots"%></td>
        <td nowrap><%= render 'customer/posts/tag', tag_list: post.tag_list %></td>
       </tr>
      <% end %>
    </tbody>
   </table>
  </div>
 </div>

</div>