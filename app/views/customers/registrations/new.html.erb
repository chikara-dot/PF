<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

 <div class="field">
  <%= f.label "名前" %><br>
  <%= f.text_field :last_name, autofocus: true, placeholder: "(姓) 山田" %>
  <%= f.text_field :first_name, placeholder: "（名）花子" %>
 </div>

 <div class="field">
   <%= f.label "フリガナ"%><br>
   <%= f.text_field :last_name_kana, placeholder: "（セイ）ヤマダ"%>
   <%= f.text_field :first_name_kana, placeholder: "（ナ）ハナコ"%>
 </div>

 <div class="field">
   <%= f.label "プロフィール"%><br>
   <%= f.label "ニックネーム"%>
   <%= f.text_field :nickname, placeholder: "サイト上で表示される名前です"%>
   <%= f.label "自己紹介"%>
   <%= f.text_field :body, placeholder: "記載しなくても大丈夫です" %>
   <%= f.label "アイコン"%>
   <%= f.attachment_field :image %>
 </div>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
