<h1 class="text-center"><%= @category.name %></h1>
<div class="container">
 <div class="row">
   <div class="col-lg-12 text-right">
   <%= link_to "", new_customer_genre_category_post_path, class: "fas fa-plus fa-5x"%>
   </div>
 </div>

 <div class="row">
  <div class="col-lg-12">
   <table>
    <tbody>
       <% @posts.each do |post| %>
      <tr>
       <td>
        <p>
           <div><%= post.created_at.strftime('%Y/%m/%d')%></div>
           <div class="pl-2"><%= post.customer.nickname %></div>
        </p>
        <%= attachment_image_tag post, :image, size: "300x250" %>
       </td>
       <td class="center-block post-index-title">
        <%= post.title %>
       </td>
       <td nowrap class="pr-5">
        <% if post.favorited_by?(current_customer)%>
          <%= link_to customer_genre_category_post_favorites_path(@category.genre_id,@category,post), method: :delete do %>
           ♥<%= post.favorites.count %>いいね
          <% end %>
        <% else %>
          <%= link_to customer_genre_category_post_favorites_path(@category.genre_id,@category,post), method: :post do %>
           ♡<%= post.favorites.count %>いいね
          <% end %>
        <% end %>
       </td>
      </tr>
      <% end %>
    </tbody>
   </table>
  </div>
 </div>

</div>